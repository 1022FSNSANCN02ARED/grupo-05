<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/header.ejs") %>
    <main class="container-formulario">
      <form
        method="post"
        action="/user/loged"
        enctype="application/x-www-form-urlencoded"
        class="formulario"
        id="formulario"
      >
        <h1 class="text-align-c padding-1 formulario__h1">Iniciar Sesion</h1>
        <% if (locals.errors) { %>
        <div class="error__case flex">
          <ul>
            <% errors.forEach(error => { %>

            <li class="formulario__input-error-back">
              <i class="fa-solid fa-triangle-exclamation"></i> <%= error.msg %>
            </li>

            <% }) %>
          </ul>
        </div>
        <% } %>
        <div class="formulario__grupo" id="grupo__nombre">
          <label for="usuario" class="formulario__label">Email</label>
          <div class="formulario__grupo-input">
            <input
              type="email"
              class="formulario__input"
              name="emailLogin"
              placeholder="Ingresa tu email..."
            />
          </div>
        </div>
        <div class="formulario__grupo" id="grupo__password">
          <label for="password2" class="formulario__label">Contraseña</label>
          <div class="formulario__grupo-input">
            <input
              type="password"
              class="formulario__input"
              name="passwordLogin"
              placeholder="Ingresa tu contraseña..."
            />
            <i class="formulario__validacion-estado fas fa-times-circle"></i>
          </div>
        </div>
        <div>
          <label for="recordame">Recordame</label>
          <input type="checkbox" name="recordame" />
        </div>
        <div class="formulario__grupo formulario__grupo-btn-enviar">
          <button
            type="submit"
            class="formulario__btn"
            name="submit"
            id="submit"
          >
            Enviar
          </button>
          <p class="text-align-c margin-b-1">Olvidaste tu contraseña?</p>
          <button class="box-shadow formulario__btn">
            <i class="fa-brands fa-google"></i> Ingresa con Google
          </button>
          <button class="box-shadow formulario__btn">
            <i class="fa-brands fa-apple"></i> Ingresa con Apple
          </button>
        </div>
      </form>
    </main>
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
