<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/header.ejs") %>
    <main class="container-formulario">
      <form method="post" action="" enctype="multipart/form-data" class="formulario" id="formulario">
        <h1 class="text-align-c padding-1 formulario__h1">Iniciar Sesion</h1>
        <div class="formulario__grupo" id="grupo__nombre">
          <label for="usuario" class="formulario__label">Usuario</label>
          <div class="formulario__grupo-input">
            <input type="text" class="formulario__input" name="userName" id="userName" placeholder="Ingresa tu usuario...">
          </div>
        </div>
        <div class="formulario__grupo" id="grupo__password">
				  <label for="password2" class="formulario__label">Contraseña</label>
				  <div class="formulario__grupo-input">
					  <input type="password" class="formulario__input" name="password" id="password" placeholder="Ingresa tu contraseña...">
					  <i class="formulario__validacion-estado fas fa-times-circle"></i>
				  </div>
			  </div>
        <div class="formulario__grupo formulario__grupo-btn-enviar">
				  <button type="submit" class="formulario__btn" name="submit" id="submit">Enviar</button>
          <p class="text-align-c margin-b-1">Olvidaste tu contraseña?</p>
          <button class="box-shadow formulario__btn"><i class="fa-brands fa-google "></i> Ingresa con Google</button>
          <button class="box-shadow formulario__btn"><i class="fa-brands fa-apple "></i> Ingresa con Apple</button>
			  </div>
      </form>
	  </main>
    <main class="container-formulario">
      <section class="flex flex-direccion-c image">
        <h1 class="formulario__h1 padding-1">Iniciar Sesion</h1>
        <form action="" class="margin-b-1">
          <div class="formulario__grupo flex flex-direccion-c">
            <input type="text" placeholder="Ingresar usuario..." class="box-shadow formulario__input" />
            <div class="flex justify-c align-items-c">
              <input type="password" placeholder="Ingresar contraseña..." id="password" class="w-90 box-shadow formulario__input" />
              <i id="eye" class="fa-regular fa-eye"></i>
            </div>
            <button type="submit" class="box-shadow">Enviar</button>
            <p>Olvidaste tu contraseña?</p>
            <button class="box-shadow"><i class="fa-brands fa-google"></i>Ingresa con Google</button>
            <button class="box-shadow"><i class="fa-brands fa-apple"></i>Ingresa con Apple</button>
          </div>
        </form>
      </section>
    </main>
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
