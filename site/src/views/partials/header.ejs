<header class="container-header">
  <div class="container-burger">
    <img
      onclick="document.body.classList.toggle('open')"
      class="burger"
      src="/images/burger.png"
    />
  </div>

  <div class="container-logo">
    <a href="/"><img src="/images/logonpc.png" class="logo" /></a>
  </div>
  <div class="menu-items">
    <div class="menu-mobile">
      <div class="container-buscador">
        <form action="/product/searchProduct" method="get">
          <span class="icon"><i class="fa fa-search"></i></span>
          <input
            name="search"
            type="search"
            class="input-search"
            placeholder="Busca tu juego..."
          />
        </form>
      </div>
    </div>
  </div>
  <div class="administrador-menu open-menu">
    <div class="admin-menu">
      <a href="/admin" class="menu-a">Menu Admin</a>
    </div>
  </div>
  <div class="container-perfil">
    <span class="badge"></span>
    <a href="user/login"><img src="/images/perfil.png" class="logo-perfil" /></a>
  </div>
  <div class="container-carrito">
    <span class="badge"></span>
    <a href="cart"><img src="/images/carrito.png" class="carrito" /></a>
  </div>
  <div class="cerrar-sesion open-menu">
    <span class="badge"></span>
    <a href="/"><img src="/images/salir.png" class="sesion-cerrar" /></a>
  </div>
</header>
