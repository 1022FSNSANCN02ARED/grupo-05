<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>

    <title>Login Market Place</title>
  </head>
  <body>
    <%- include("./partials/header") %>
    <main>
      <div class="banner">
        <img
          src="/imgs/carrusel/renova hogar.jpg"
          alt="ofertas"
          class="banner__img"
        />
      </div>
      <section class="news__container">
        <article class="news">
          <h3 class="news-title">Ofertas</h3>
          <div class="scroller">
            <a href="#" class="scroller-item" target="_blank"
              ><img
                src="/imgs/productos/img-macbook-pro-2019.jpg"
                alt="oferta de categoría"
                class="historias__img"
              />
            </a>

            <a href="#" class="scroller-item" target="_blank"
              ><img
                src="/imgs/productos/img-macbook-pro-2019.jpg"
                alt="oferta de categoría"
                class="historias__img"
            /></a>

            <a href="#" class="scroller-item" target="_blank"
              ><img
                src="/imgs/productos/img-macbook-pro-2019.jpg"
                alt="oferta de categoría"
                class="historias__img"
            /></a>

            <a href="#" class="scroller-item" target="_blank"
              ><img
                src="/imgs/productos/img-macbook-pro-2019.jpg"
                alt="oferta de categoría"
                class="historias__img"
            /></a>

            <a href="#" class="scroller-item" target="_blank"
              ><img
                src="/imgs/productos/img-macbook-pro-2019.jpg"
                alt="oferta de categoría"
                class="historias__img"
            /></a>

            <a href="#" class="scroller-item" target="_blank"
              ><img
                src="/imgs/productos/img-macbook-pro-2019.jpg"
                alt="oferta de categoría"
                class="historias__img"
            /></a>
          </div>
        </article>
      </section>
      <section class="main-product">
        <section class="section-product">
          <h2 class="title-product">Categoria</h2>
          <div class="contain-product">
            <article class="product">
        
              
              <div class="info-product">
                <% productos.forEach(elProducto => { %>
                <h3 class="nom-product"><%= elProducto.nombre %></h3>
                <p class="ofert-product"><%= elProducto.oferta %>></p>
                <p class="precio-product"><%= elProducto.precio%></p>

                <% }) %>
              </div>
            </article>
          </div>
        </section>
        
        <section class="section-product">
          <h2 class="title-product">Categoria</h2>
          <div class="contain-product">
            <article class="product">
              <img
                class="img-product"
                src="imgs/productos/img-cafetera-moulinex.jpg"
                alt="cafetera-moulinex"
              />
              <div class="info-product">
                <h3 class="nom-product">Cafetera Moulinex</h3>
                <p class="ofert-product">40% OFF</p>
                <p class="precio-product">$6.770</p>
              </div>
            </article>
            <article class="product">
              <img
                class="img-product"
                src="imgs/productos/img-macbook-pro-2019.jpg"
                alt="macbook-pro-2019"
              />
              <div class="info-product">
                <h3 class="nom-product">MacBook Pro 2019</h3>
                <p class="ofert-product">20% off</p>
                <p class="precio-product">$230.000</p>
              </div>
            </article>
            <article class="product">
              <img
                class="img-product"
                src="imgs/productos/img-samsung-galaxy-s10.jpg"
                alt="samsung-galaxy-s10"
              />
              <div class="info-product">
                <h3 class="nom-product">Samsung Galaxy S10</h3>
                <p class="ofert-product">10% off</p>
                <p class="precio-product">$70.500</p>
              </div>
            </article>
            <article class="product">
              <img
                class="img-product"
                src="imgs/productos/img-tv-samsung-smart.jpg"
                alt="tv-samsung-smart"
              />
              <div class="info-product">
                <h3 class="nom-product">SmartTv Samsung 43"</h3>
                <p class="ofert-product">5% off</p>
                <p class="precio-product">$230.200</p>
              </div>
            </article>
          </div>
        </section>
      </section>
    </main>

    <%- include("./partials/footer") %>
  </body>
</html>
