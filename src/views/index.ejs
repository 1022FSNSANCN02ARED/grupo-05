<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/header.ejs") %>
    <main>
      <!-- Juego del A単o -->
      <section class="margin-1 padding-1 image box-shadow">
        <!-- <h1 class="margin-b">Juego del A単o</h1> -->
        <figure>
          <a href="/product/showProduct/20">
            <img
              src="/images/elden-ring.jpg"
              alt="juego-del-a単o"
              class="maxw bor-1 box-shadow"
            />
          </a>
          <figcaption>Juego del A単o</figcaption>
        </figure>
      </section>
      <!-- Juegos destacados -->
      <section class="scroll margin-1 padding-1 box-shadow">
        <h2 class="margin-b">Juegos Destacados</h2>
        <div class="flex gap">
          <% product.forEach((game, i) => { %> <% if (i < 5) { %>
          <article>
            <a href="/product/showProduct/<%= game.id %>">
              <img
                src="<%= game.image %>"
                alt=""
                class="maxw bor-10 box-shadow"
              />
            </a>
          </article>
          <% } %> <% }) %>
        </div>
      </section>
      <!-- Categorias -->
      <section id="category" class="scroll margin-1 padding-1 box-shadow">
        <h2 class="margin-b">Categorias Destacadas</h2>
        <div class="scroll-container flex gap justify-c-e">
          <% product.forEach((game, i ) => { i++ %> <% if (i < 5 ) { %>
          <article class="card flex w-22 h-5 bor-1 box-shadow">
            <a href="/product/showCategory/<%= game.category.id %>">
              <i class="<%= game.category.icon %>"></i>
              <h5><%= game.category.name %></h5>
            </a>
          </article>
          <% } %> <% }) %>
        </div>
      </section>
    </main>
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
